            {
                // ARRANGE

                // ACT 

                // ASSERT
            }
            ]]>
            </Code>
            <Imports>
                <Import>
                    <Namespace>Xunit</Namespace>                    
                </Import>
                <Import>
                    <Namespace>System.Threading.Tasks</Namespace>
                </Import>                
            </Imports>   
            <Declarations>
                <Literal>
                    <ID>TestName</ID>                
                    <Default>testName</Default>
                </Literal>
            </Declarations>         
        </Snippet>
    </CodeSnippet>

    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>XUnit Theory</Title>
            <Shortcut>xtheory</Shortcut>
        </Header>
        <Snippet>
            <Code Language="CSharp"><![CDATA[
            [Theory]
            public void $TestName$($ParamType$ $ParamName$) 
            {
                // ARRANGE

                // ACT 

                // ASSERT
            }
            ]]>
            </Code>
            <Imports>
                <Import>
                    <Namespace>Xunit</Namespace>
