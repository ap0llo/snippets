            </Imports>   
            <Declarations>
                <Literal>
                    <ID>TestName</ID>                
                    <Default>testName</Default>
                </Literal>
                <Literal>
                    <ID>ParamType</ID>                
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>ParamName</ID>                
                    <Default>parameter</Default>
                </Literal>                                
            </Declarations>         
        </Snippet>
    </CodeSnippet>
